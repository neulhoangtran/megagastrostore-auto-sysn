// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

model CollectionMenuVersion {
  id          Int      @id @default(autoincrement())
  shop        String
  versionName String   
  menuJson    Json   
  createdAt   DateTime @default(now())
  isActive    Boolean  @default(false)
  @@index([shop])
}

model CollectionMapCategory {
  id                Int      @id @default(autoincrement())
  collectionId      String   @unique
  magentoCategoryId Int
  name              String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([magentoCategoryId])
}

model ProductMapMagento {
  id               Int      @id @default(autoincrement())
  shopifyProductId String   @unique
  magentoProductId Int      @unique
  sku              String?
  name             String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([magentoProductId])
}

model AttributeMapMetafield {
  id                     Int      @id @default(autoincrement())
  magentoAttributeCode   String   @unique

  shopifyNamespace       String   // magento
  shopifyKey             String   // tuerart
  shopifyType            String   // metaobject_reference | list.metaobject_reference

  metaobjectHandle       String?   // magento_tuerart_option
  metaobjectTypeId       String?  // gid://shopify/MetaobjectDefinition/...
  
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
}